<div class="flex flex-col w-4/5 m-auto">
  <header class="flex mb-7">
    <%= turbo_frame_tag "new_disease", { class: "flex w-full" } do %>
    <div class="w-1/3">
        <%= render(Basic::ButtonComponent.new(color: :dark)) do %>
          <%= link_to "+ Disease", new_disease_path %>
        <% end %>
    </div>

    <div class="w-1/3 flex justify-center">
      <h2><b>Diseases</b></h2>
    </div>

    <% end %>
  </header>

  <div class="flex flex-col min-h-screen bg-white rounded-sm">
    <div class="mt-4">
      <%= turbo_frame_tag "diseases_index", src: diseases_path, target: "_top" %>
    </div>
  </div>
</div>
