<div class="w-2/5 m-auto">
  <h1>New Disease</h1>

  <%= form_with model: @disease, class: "flex flex-col mt-4" do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>

    <%= f.label :start_date %>
    <%= f.date_field :start_date %>

    <%= f.label :end_date %>
    <%= f.date_field :end_date %>

    <%= f.label :symptoms %>
    <%= f.text_area :symptoms %>

    <%= f.label :notes %>
    <%= f.text_area :notes %>

    <div class="mt-3">
      <%= f.submit "Save", { class: dark_blue_button }%>
      <%= link_to "Cancel", :back, { class: red_button } %>
    </div>
  <% end %>
</div>
